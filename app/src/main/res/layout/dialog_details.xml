            android:textColor="@color/text_color_data_usage_main_value"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvVolQ2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:gravity="center"
            android:text="1.1111"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llQ3"
        android:layout_width="match_parent"
