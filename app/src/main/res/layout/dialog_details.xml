        <TextView
            android:id="@+id/tvQ3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:gravity="center"
            android:text="Q3"
            android:textColor="@color/text_color_data_usage_main_value"
            android:textSize="20dp" />

